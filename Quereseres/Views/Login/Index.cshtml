
@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.LoginError != null)
{
    <div class="login-error">
        <span>@ViewBag.LoginError</span>
    </div>
}

<div class="login">
    <h1>Login</h1>

    <form method="post" asp-controller="Login" asp-action="Login" class="login-form">
        <label for="email">Email: </label>
        <input id="email" name="email" type="text" class="login-form__text-input"/>

        <label for="password">Password: </label>
        <input id="password" name="password" type="password" class="login-form__text-input" />

        <input type="submit" value="Login" class="login-form__submit-input">
    </form>
</div>